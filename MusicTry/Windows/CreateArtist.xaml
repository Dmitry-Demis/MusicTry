<Window x:Class="MusicTry.Windows.CreateArtist"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Создание Артиста" Height="200" Width="300"
        Background="#E6F0FA"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Введите имя артиста:" FontSize="14" Margin="0,0,0,10"/>
            <TextBox x:Name="ArtistNameTextBox" Width="250" FontSize="14" />
            <Button Content="Создать" 
                    Margin="0,10,0,0" 
                    Width="250" 
                    Height="30" 
                    Background="#2196F3" 
                    Foreground="White" 
                    FontSize="14" 
                    Click="OnCreateArtistClick"/>
        </StackPanel>
    </Grid>
</Window>
